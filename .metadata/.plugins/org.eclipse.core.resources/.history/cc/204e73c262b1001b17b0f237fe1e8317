	<script>
		
		// 페이지 로드 이벤트
		$(document).ready(function(){
		
			$('#btn1').on('click', function(){
				location.href = '/01_SERVLET/Ex03';
			})
			
			$('#btn2').click(function(){
				const name = '브레드';
				location.href = '/01_SERVLET/Ex03?name=' + name;
			})
			
			$('#btn3').click(function(){
				const height = $('#target1');
				location.href - '/01_SERVLTE/Ex03?height=' + height.text();
			})
			
			$('#btn4').click(function(){
				const weight = $('#target2');
				
				/* 방법 1. */
				// location.href = '/01_SERVLET/Ex03?weight=' + weight.dataset.weight;
				/* data-속성   >>  내용을 가지고 갈 때, dataset.속성 으로 사용한다 **  */
				
				/* 방법 2. */
				location.href = '/01_SERVLET/Ex03?weight=' + weight.attr('data-weight');
			})
			
		})
		
	
	</script>
